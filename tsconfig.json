{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "module": "ES2020",
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  }
}
